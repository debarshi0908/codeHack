<?xml version="1.0" encoding="utf-8"?>
<resources>

	<attr name="aboutBackground" format="color"/>

	<style name="Theme.Translucent" parent="android:style/Theme">
		<!-- <item name="android:windowAnimationStyle">@style/Animation.DropInOut</item> -->
		<item name="android:windowBackground">@drawable/rectangle_transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="aboutBackground">@color/about_background</item>
	</style>


	<!-- <style name="Animation.DropInOut" parent="android:style/Animation.Activity">
		<item name="android:windowEnterAnimation">@anim/drop_in</item>
		<item name="android:windowExitAnimation">@anim/drop_out</item>
	</style> -->


	<style name="TextStyle"></style>
	
	<style name="TextStyle.AboutText">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/light_text_secondary</item>
	</style>

	<style name="TextStyle.SingleLine">
		<item name="android:lines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:scrollHorizontally">true</item>
	</style>

	<style name="TextStyle.SingleLine.TitleBarBig">
		<item name="android:textSize">40sp</item>
		<item name="android:textColor">@color/light_text_primary</item>
	</style>

	<style name="TextStyle.SingleLine.TitleBar">
		<item name="android:textSize">34sp</item>
		<item name="android:textColor">@color/light_text_primary</item>
	</style>

	<style name="TextStyle.SingleLine.HomeItem">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/light_text_primary</item>
	</style>

	<style name="TextStyle.SingleLine.HomeItemSeperator">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/light_text_secondary</item>
	</style>

	<style name="TextStyle.SingleLine.MyFormsTitle">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/light_text_primary</item>
	</style>

	<style name="TextStyle.SingleLine.MyFormsDescription">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/light_text_third</item>
	</style>

	<style name="TextStyle.SingleLine.FindFormsTitle">
		<item name="android:textSize">22sp</item>
		<item name="android:textColor">@color/light_text_primary</item>
	</style>

	<style name="TextStyle.SingleLine.FindFormsDescription">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/light_text_third</item>
	</style>

	<style name="EditTextStyle"></style>

	<style name="EditTextStyle.SingleLine">
		<item name="android:lines">1</item>
		<item name="android:scrollHorizontally">true</item>
	</style>

	<style name="EditTextStyle.SingleLine.FindFormsSearchBar">
		<item name="android:maxLength">100</item>
		<item name="android:inputType">textNoSuggestions</item>
		<item name="android:paddingRight">60dp</item>
	</style>
</resources>
