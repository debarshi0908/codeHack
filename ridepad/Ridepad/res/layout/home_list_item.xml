<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/HomeListItemRelativeLayoutSeperator"
        android:layout_width="fill_parent"
        android:layout_height="27dp"
        android:background="@color/list_seperator_background"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/HomeListItemTesxtViewSeperator"
            style="@style/TextStyle.SingleLine.HomeItemSeperator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:text="Seperator" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/HomeListItemRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/HomeListItemTextView"
            style="@style/TextStyle.SingleLine.HomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/HomeListItemImageView"
            android:text="Home ListView Item" >
        </TextView>

        <ImageView
            android:id="@+id/HomeListItemImageView"
            android:layout_width="@dimen/home_item_icon_dimen"
            android:layout_height="@dimen/home_item_icon_dimen"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:scaleType="fitCenter" >
        </ImageView>

        <ImageView
            android:id="@+id/HomeListItemImageView2"
            android:layout_width="12dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"            
            android:scaleType="fitCenter" >
        </ImageView>
    </RelativeLayout>

</RelativeLayout>